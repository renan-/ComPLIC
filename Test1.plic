# Exemple de programme ecrit en PLIC	#
#																			#
# # # # # # # # # # # # # # # # # # # #

programme Exemple {

	#
	# Declarations
	#	

	entier a b c ;
	booleen d ;

	#
	# Instructions
	#

	a := 4 ;
	b := 5 ;

	# N'affiche rien

	si a > b
		alors {
			ecrire a ;
		}

	# Affiche les 10 premiers entiers positifs

	pour c dans 1 .. 10
		repeter {
			ecrire c ;
		}

	# En affiche 10 de plus

	d := ( a = b ) ou vrai ;
	si d alors {
		tantque c <= 20
			repeter {
				ecrire c ;
				c := c + 1 ;
			}
	}
}